{
  "pages": [
    {
      "url": "https://www.bbc.com/news/business",
      "path_patterns": [
        "^/news/business-.*"
      ],
      "selectors": {
        "key": "article",
        "selector": "#main-content",
        "children": [
          {
            "key": "title",
            "selector": "#main-heading"
          },
          {
            "key": "author",
            "selector": "[data-component=byline-block] [class*=TextContributorName]"
          },
          {
            "key": "publish_date",
            "selector": "[data-testid=timestamp]",
            "extract": {
              "type": "attribute",
              "key": "datetime"
            }
          },
          {
            "key": "article",
            "selector": "*",
            "children": [
              {
                "key": "images",
                "selector": "[data-component=image-block]",
                "select": "all",
                "children": [
                  {
                    "key": "image_src",
                    "selector": "img",
                    "extract": {
                      "type": "attribute",
                      "key": "src"
                    }
                  },
                  {
                    "key": "caption",
                    "selector": "figcaption div"
                  }
                ]
              },
              {
                "key": "paragraphs",
                "selector": "[data-component=text-block]",
                "select": "all"
              }
            ]
          }
        ] 
      }
    }
  ]
}